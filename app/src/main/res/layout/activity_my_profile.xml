<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_text"
              android:orientation="vertical"
              android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/user"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                style="@style/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"/>

            <TextView
                style="@style/sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jakarta, Indonesia"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                style="@style/big_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_primary_none"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/edit_profile_button"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="Occupation"
            android:textColor="@color/white_text"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingLeft="32dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="Quality Assurance at PT Foo Bar"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="Interests"
            android:textColor="@color/white_text"
            android:textStyle="bold"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/interest_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>
